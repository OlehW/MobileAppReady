<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white_background"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/lessonIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_book"
            android:contentDescription="@string/lesson_icon"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lessonTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Розділ 1"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/lessonTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тема розділу"
                android:textSize="12sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/lessonStatusIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_statusmain"
            android:contentDescription="@string/lessonStatusIconMain"/>
    </LinearLayout>

    <Button
        android:id="@+id/startLesson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Почати"
        android:backgroundTint="@color/button_yellow"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>
</LinearLayout>