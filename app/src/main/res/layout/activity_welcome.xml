<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".WelcomeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fone_background"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_gravity="top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/main">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/ic_logo"
            android:contentDescription="@string/app_logo"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/welcomeTextPart1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ласкаво просимо!"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="0dp" />

        <TextView
            android:id="@+id/welcomeTextPart2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мобільний додаток LanguageApp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="0dp"
            android:layout_marginBottom="2dp" />

        <Button
            android:id="@+id/getStartedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Розпочати"
            android:backgroundTint="@color/button_yellow"
            android:textColor="@color/black"
            android:padding="12dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/alreadyHaveAccountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вже маєте обліковий запис?"
                android:textSize="14sp"
                android:textColor="@color/text_grey"
                android:gravity="center" />

            <TextView
                android:id="@+id/loginTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Увійти"
                android:textSize="14sp"
                android:textColor="@color/button_yellow"
                android:gravity="center"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>